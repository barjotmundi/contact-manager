@* Modal for add + edit *@
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactModalLabel">Contact</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            @* Submit is handled in JS to create/update *@
            <form id="contactForm" novalidate>
                <div class="modal-body">
                    @* Hidden id decides create vs update *@
                    <input type="hidden" id="contactId" />

                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input id="name" type="text" class="form-control" placeholder="Full name" autocomplete="name" />
                        <div id="nameError" class="invalid-feedback" aria-live="polite"></div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input id="email" type="email" class="form-control" placeholder="Email address" autocomplete="email" inputmode="email" />
                        <div id="emailError" class="invalid-feedback" aria-live="polite"></div>
                    </div>

                    <div class="mb-3">
                        <label for="phoneA" class="form-label">Phone</label>

                        @* Split inputs so phone formatting is obvious *@
                        <div class="d-flex align-items-center gap-2">
                            <div class="input-group">
                                <span class="input-group-text">(</span>
                                <input id="phoneA"
                                       type="text"
                                       class="form-control text-center"
                                       inputmode="numeric"
                                       autocomplete="tel-area-code"
                                       maxlength="3"
                                       aria-label="Area code"
                                       aria-describedby="phoneHint" />
                                <span class="input-group-text">)</span>
                            </div>

                            <span class="fw-semibold">-</span>

                            <input id="phoneB"
                                   type="text"
                                   class="form-control text-center"
                                   inputmode="numeric"
                                   autocomplete="tel-local-prefix"
                                   maxlength="3"
                                   aria-label="Phone prefix"
                                   aria-describedby="phoneHint" />

                            <span class="fw-semibold">-</span>

                            <input id="phoneC"
                                   type="text"
                                   class="form-control text-center"
                                   inputmode="numeric"
                                   autocomplete="tel-local-suffix"
                                   maxlength="4"
                                   aria-label="Phone line number"
                                   aria-describedby="phoneHint" />
                        </div>

                        <div id="phoneHint" class="form-text text-muted">
                            Format: (123)-456-7890
                        </div>

                        @* Phone uses a single error message for all three boxes *@
                        <div id="phoneError" class="invalid-feedback d-block" aria-live="polite"></div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button id="saveBtn" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
