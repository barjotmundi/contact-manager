{
  "compilerOptions": {
    "rootDir": "./wwwroot/ts",
    "outDir": "./wwwroot/js",

    "target": "ES2017",
    "lib": [ "DOM", "ES2017" ],

    "module": "ES2020",
    "moduleResolution": "Bundler",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "types": ["jquery"]
  },
  "include": [ "wwwroot/ts/**/*.ts" ],
  "exclude": [ "node_modules", "bin", "obj" ]
}
